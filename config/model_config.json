{
  "model_name": "TinyLlama/TinyLlama-1.1B-Chat-v1.0",
  "model_type": "causal_lm",
  "torch_dtype": "float16",
  "device_map": "auto",
  "trust_remote_code": true,
  "generation": {
    "max_new_tokens": 512,
    "temperature": 0.7,
    "top_p": 0.9,
    "do_sample": true,
    "repetition_penalty": 1.1
  },
  "memory_optimization": {
    "enable_gpu_cache_clearing": true,
    "checkpoint_interval": 50
  }
}
